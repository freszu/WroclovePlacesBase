<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.NormalStatusBar" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Widget.PlaceCardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_content_padding_left_right</item>
        <item name="android:paddingRight">@dimen/card_content_padding_left_right</item>
        <item name="android:paddingTop">@dimen/card_content_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/card_content_padding_top_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>

